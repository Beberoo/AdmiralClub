const ContentGrid = () => {
  const games = [
    { name: 'SLOTS', icon: Gem, color: 'text-fuchsia-400', bg: 'from-fuchsia-600/30 to-purple-900/30' },
    { name: 'ROULETTE', icon: Disc, color: 'text-cyan-400', bg: 'from-cyan-600/30 to-blue-900/30' },
    { name: 'POKER', icon: Club, color: 'text-amber-400', bg: 'from-amber-600/30 to-orange-900/30' },
    { name: 'BLACKJACK', icon: Spade, color: 'text-rose-400', bg: 'from-rose-600/30 to-red-900/30' },
    { name: 'DICE', icon: Dices, color: 'text-purple-400', bg: 'from-purple-600/30 to-indigo-900/30' },
    { name: 'BACCARAT', icon: Crown, color: 'text-yellow-400', bg: 'from-yellow-600/30 to-amber-900/30' },
    { name: 'KENO', icon: Star, color: 'text-emerald-400', bg: 'from-emerald-600/30 to-green-900/30' },
    { name: 'WHEEL OF FORTUNE', icon: Disc, color: 'text-red-400', bg: 'from-red-600/30 to-rose-900/30' },
    { name: 'SCRATCH', icon: Gem, color: 'text-pink-400', bg: 'from-pink-600/30 to-fuchsia-900/30' },
    { name: 'VIDEO POKER', icon: Spade, color: 'text-blue-400', bg: 'from-blue-600/30 to-cyan-900/30' },
  ];

  const [rotationOffset, setRotationOffset] = useState(0);
  const [isDragging, setIsDragging] = useState(false);
  const [startX, setStartX] = useState(0);
  const [startRotation, setStartRotation] = useState(0);
  
  // Physics constants
  const RADIUS = 800; // Radius of the orbit
  const VISIBLE_ANGLE = Math.PI / 4; // How much of the arc is visible (45 degrees)
  const ITEM_SPACING = Math.PI / 10; // Spacing between items in radians (18 degrees)
  
  // Center of the circle relative to the container top
  // We want the top of the circle (at -PI/2) to be roughly at Y=50px
  // So CenterY = 50 + RADIUS
  const CENTER_Y_OFFSET = RADIUS + 40; 

  const handleMouseDown = (e) => {
    setIsDragging(true);
    setStartX(e.clientX);
    setStartRotation(rotationOffset);
  };

  const handleTouchStart = (e) => {
    setIsDragging(true);
    setStartX(e.touches[0].clientX);
    setStartRotation(rotationOffset);
  };

  const handleMove = (clientX) => {
    if (!isDragging) return;
    
    const deltaX = clientX - startX;
    // Convert linear drag to angular rotation
    // Smaller divisor = faster rotation sensitivity
    const deltaRotation = (deltaX / RADIUS) * 1.5; 
    
    setRotationOffset(startRotation + deltaRotation);
  };

  const handleMouseMove = (e) => {
    e.preventDefault();
    handleMove(e.clientX);
  };

  const handleTouchMove = (e) => {
    handleMove(e.touches[0].clientX);
  };

  const handleEnd = () => {
    setIsDragging(false);
  };

  // Helper to calculate position for an item at a specific angle
  const getPosition = (index) => {
      // Base angle for item (top of circle is -PI/2)
      const baseAngle = -Math.PI / 2;
      
      // Calculate current angle based on index, spacing and scroll offset
      const angle = baseAngle + (index * ITEM_SPACING) + rotationOffset;
      
      // Calculate X and Y on the circle border
      const x = RADIUS * Math.cos(angle);
      const y = RADIUS * Math.sin(angle);
      
      // Calculate distance from top center (for opacity/scaling)
      // Top center is at angle -PI/2
      const distanceFromTop = Math.abs(angle - baseAngle);
      
      // If item is too far down the sides, hide it or fade it out
      const isVisible = angle > -Math.PI && angle < 0; // Simple visibility check (upper half)
      
      return { x, y, angle, distanceFromTop, isVisible };
  };

  return (
    <div className="py-24 bg-[#050208] overflow-hidden" 
         onMouseUp={handleEnd} 
         onMouseLeave={handleEnd}
         onTouchEnd={handleEnd}
    >
      <div className="max-w-7xl mx-auto px-4">
        
        {/* Headlines */}
        <div className="flex justify-between items-end mb-8 border-b border-white/10 pb-4">
          <h3 className="text-2xl text-white font-bold">Aktuelno</h3>
          <a href="#" className="text-fuchsia-500 text-xs font-bold uppercase tracking-wider hover:text-white transition-colors">Vidi sve</a>
        </div>

        {/* Promocije - Main Row */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-8 mb-24">
          {[1, 2, 3].map((i) => (
            <div key={i} className="aspect-video bg-[#11051c] border border-white/5 rounded-2xl flex items-center justify-center relative overflow-hidden group hover:border-fuchsia-500/40 transition-all shadow-lg hover:shadow-fuchsia-900/20 cursor-pointer">
              <div className="absolute inset-0 bg-gradient-to-br from-purple-900/20 to-transparent opacity-50"></div>
              <div className="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-fuchsia-500/10 to-transparent"></div>
              <div className="relative z-10 text-center transform group-hover:scale-105 transition-transform duration-300">
                 <div className="bg-fuchsia-600 w-12 h-1 mb-4 mx-auto rounded-full"></div>
                 <span className="text-white font-bold text-xl tracking-wide">PROMOCIJA {i}</span>
                 <p className="text-gray-500 text-xs mt-2">Saznajte više &rarr;</p>
              </div>
            </div>
          ))}
        </div>

        {/* CASINO GAMES ORBITAL SLIDER */}
        <div className="relative pt-0 pb-32 mb-24 select-none">
             <div className="text-center mb-20 relative z-10">
                <h3 className="text-white font-black text-3xl tracking-widest uppercase mb-2">Popularne Igre</h3>
                <p className="text-gray-500 text-xs tracking-wider flex items-center justify-center gap-2">
                    <span className="w-2 h-2 rounded-full bg-fuchsia-500 animate-pulse"></span>
                    Povuci da zavrtiš orbitu
                </p>
             </div>

             {/* Orbital Container */}
             <div 
                className="relative h-[400px] w-full overflow-hidden cursor-grab active:cursor-grabbing"
                onMouseDown={handleMouseDown}
                onMouseMove={handleMouseMove}
                onTouchStart={handleTouchStart}
                onTouchMove={handleTouchMove}
             >
                {/* The Visible Orbit Line */}
                <div 
                    className="absolute border border-fuchsia-500/30 rounded-full shadow-[0_0_50px_rgba(217,70,239,0.1)] pointer-events-none"
                    style={{
                        width: `${RADIUS * 2}px`,
                        height: `${RADIUS * 2}px`,
                        left: '50%',
                        top: `${80}px`, // Increased offset to prevent header cutoff
                        transform: 'translateX(-50%)'
                    }}
                >
                    {/* Glowing effect on the line */}
                    <div className="absolute top-0 left-1/2 -translate-x-1/2 w-1/3 h-1 bg-gradient-to-r from-transparent via-fuchsia-500 to-transparent blur-md"></div>
                </div>

                {/* Cards on Orbit */}
                {games.map((game, idx) => {
                    const pos = getPosition(idx);
                    const Icon = game.icon;

                    // Skip rendering if significantly out of view/arc
                    if (pos.angle > 0.5 || pos.angle < -Math.PI - 0.5) return null;

                    // Calculate opacity and scale based on distance from top center (focus point)
                    const normalizedDist = Math.min(pos.distanceFromTop, 1); // 0 at top, increases as it goes down sides
                    const scale = 1 - (normalizedDist * 0.3); // 1.0 at top, 0.7 at sides
                    const opacity = 1 - (normalizedDist * 0.8); // 1.0 at top, 0.2 at sides
                    const zIndex = Math.round((1 - normalizedDist) * 100);

                    return (
                        <div 
                            key={idx}
                            className="absolute w-32 md:w-40 aspect-[3/4] group"
                            style={{
                                left: '50%',
                                top: `${CENTER_Y_OFFSET + 80}px`, // Anchor at center of circle with offset
                                transform: `translate(-50%, -50%) translate(${pos.x}px, ${pos.y}px) rotate(${pos.angle + Math.PI/2}rad) scale(${scale})`, // Rotate to be perpendicular to orbit
                                opacity: Math.max(0, opacity),
                                zIndex: zIndex,
                                transition: isDragging ? 'none' : 'transform 0.5s ease-out, opacity 0.5s ease-out',
                            }}
                        >
                             <div className="w-full h-full relative">
                                <div className={`absolute inset-0 bg-gradient-to-br ${game.bg} border border-white/10 rounded-2xl shadow-2xl group-hover:shadow-[0_0_30px_rgba(217,70,239,0.6)] group-hover:border-fuchsia-500/80 transition-all overflow-hidden`}>
                                   {/* Animated gradient background */}
                                   <div className="absolute inset-0 opacity-40 group-hover:opacity-80 transition-opacity"></div>
                                   {/* Pattern overlay */}
                                   <div className="absolute inset-0 opacity-20 bg-[url('https://www.transparenttextures.com/patterns/diagonal-lines.png')]"></div>
                                </div>
                                <div className="absolute inset-0 bg-gradient-to-b from-white/10 to-transparent rounded-2xl"></div>

                                <div className="relative h-full flex flex-col items-center justify-center p-4 text-center">
                                    <div className={`w-14 h-14 rounded-full bg-white/10 flex items-center justify-center mb-4 ${game.color} shadow-[0_0_20px_rgba(0,0,0,0.8)] border-2 border-white/20 group-hover:border-white/40 transition-all group-hover:scale-110`}>
                                        <Icon size={28} strokeWidth={1.5} />
                                    </div>
                                    <span className="text-white font-bold text-[10px] tracking-widest uppercase group-hover:text-fuchsia-100 transition-colors drop-shadow-sm">{game.name}</span>
                                </div>
                             </div>
                        </div>
                    );
                })}
             </div>
        </div>

        {/* Instagram Feed */}
        <div className="text-center mb-10">
            <div className="inline-flex items-center gap-2 text-white font-bold text-lg mb-8">
               <Instagram className="text-fuchsia-500" />
               <span>@admiralclub</span>
            </div>
            <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
              {[1, 2, 3].map((i) => (
                <div key={i} className="aspect-[4/5] bg-[#0a0510] border border-white/10 rounded-xl flex items-center justify-center relative overflow-hidden group cursor-pointer">
                   <div className="absolute inset-0 bg-gradient-to-b from-transparent to-black/80 opacity-60"></div>
                   <div className="relative z-10 text-center p-6 border border-white/5 bg-white/5 backdrop-blur-sm rounded-lg transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                      <span className="text-white font-bold block mb-1">Instagram Post</span>
                      <span className="text-gray-400 text-xs">Pogledaj objavu</span>
                   </div>
                </div>
              ))}
            </div>
        </div>
      </div>
    </div>
  );
};